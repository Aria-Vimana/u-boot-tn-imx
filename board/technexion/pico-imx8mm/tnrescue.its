/*
 * U-Boot uImage source file with multiple kernels, ramdisks and FDT blobs
 */

/dts-v1/;

/ {
	description = "Various kernels, ramdisks and FDT blobs";
	#address-cells = <1>;

	images {
		kernel@1 {
			description = "Technexion IMX8 Linux Kernel";
			data = /incbin/("./Image");
			type = "kernel";
			arch = "arm64";
			os = "linux";
			compression = "none";
			load = <0x40480000>;
			entry = <0x40480000>;
			hash@1 {
				algo = "sha1";
			};
		};

		ramdisk@1 {
			description = "Technexion Installer Ramdisk with Qt";
			data = /incbin/("./rootfs.cpio.xz");
			type = "ramdisk";
			arch = "arm64";
			os = "linux";
			compression = "none";
			load = <0x43800000>;
			entry = <0x43800000>;
			hash@1 {
				algo = "sha1";
			};
		};

		fdt@1 {
			description = "Pico imx8mm flat device tree blob for no display";
			data = /incbin/("./dtb/imx8mm-pico-pi.dtb");
			type = "flat_dt";
			arch = "arm64";
			compression = "none";
			load = <0x43000000>;
			hash@1 {
				algo = "sha1";
			};
		};

		fdt@2 {
			description = "Pico imx8mm flat device tree blob for MIPI 5 inch panel";
			data = /incbin/("./dtb/imx8mm-pico-pi-ili9881c.dtb");
			type = "flat_dt";
			arch = "arm64";
			compression = "none";
			load = <0x43000000>;
			hash@1 {
				algo = "sha1";
			};
		};

		fdt@3 {
			description = "Pico imx8mm flat device tree blob for MIPI 8 inch panel";
			data = /incbin/("./dtb/imx8mm-pico-pi-g080uan01.dtb");
			type = "flat_dt";
			arch = "arm64";
			compression = "none";
			load = <0x43000000>;
			hash@1 {
				algo = "sha1";
			};
		};

		fdt@4 {
			description = "Pico imx8mm flat device tree blob for MIPI 10 inch panel";
			data = /incbin/("./dtb/imx8mm-pico-pi-g101uan02.dtb");
			type = "flat_dt";
			arch = "arm64";
			compression = "none";
			load = <0x43000000>;
			hash@1 {
				algo = "sha1";
			};
		};

		fdt@5 {
			description = "Pico imx8mm flat device tree blob for MIPI-LVDS bridge to 7 inch panel";
			data = /incbin/("./dtb/imx8mm-pico-pi-sn65dsi84-hj070na.dtb");
			type = "flat_dt";
			arch = "arm64";
			compression = "none";
			load = <0x43000000>;
			hash@1 {
				algo = "sha1";
			};
		};

		fdt@6 {
			description = "Pico imx8mm flat device tree blob for MIPI-LVDS bridge to 10 inch panel";
			data = /incbin/("./dtb/imx8mm-pico-pi-sn65dsi84-m101nwwb.dtb");
			type = "flat_dt";
			arch = "arm64";
			compression = "none";
			load = <0x43000000>;
			hash@1 {
				algo = "sha1";
			};
		};

		fdt@7 {
			description = "Pico imx8mm flat device tree blob for MIPI 5' panel overlay";
			data = /incbin/("./dtb/imx8mm-pico-pi-mipi_5.dtbo");
			type = "flat_dt";
			arch = "arm64";
			compression = "none";
			load = <0x43100000>;
			hash@1 {
				algo = "sha1";
			};
		};
	};

	configurations {
		imx8mm-pico-pi.dtb {
			description = "Boot IMX8mm with MIPI";
			kernel = "kernel@1";
			ramdisk = "ramdisk@1";
			fdt = "fdt@1";
		};
		imx8mm-pico-pi-ili9881c.dtb {
			description = "Boot IMX8mm with 5' mipi";
			kernel = "kernel@1";
			ramdisk = "ramdisk@1";
			fdt = "fdt@2";
		};
		imx8mm-pico-pi-g080uan01.dtb {
			description = "Boot IMX8mm with 8' mipi";
			kernel = "kernel@1";
			ramdisk = "ramdisk@1";
			fdt = "fdt@3";
		};
		imx8mm-pico-pi-g101uan02.dtb {
			description = "Boot IMX8mm with 10' mipi";
			kernel = "kernel@1";
			ramdisk = "ramdisk@1";
			fdt = "fdt@4";
		};
		imx8mm-pico-pi-sn65dsi84-hj070na.dtb {
			description = "Boot IMX8mm with bridged lvds 7' panel";
			kernel = "kernel@1";
			ramdisk = "ramdisk@1";
			fdt = "fdt@5";
		};
		imx8mm-pico-pi-sn65dsi84-m101nwwb.dtb {
			description = "Boot IMX8mm with bridged lvds 10' panel";
			kernel = "kernel@1";
			ramdisk = "ramdisk@1";
			fdt = "fdt@6";
		};
		imx8mm-pico-pi-mipi5.dtb {
			description = "Boot IMX8mm with bridged lvds 10' panel";
			kernel = "kernel@1";
			ramdisk = "ramdisk@1";
			fdt = "fdt@1", "fdt@7";
		};
		mipi5 {
			description = "5 inch panel overlay";
			fdt = "fdt@7";
		};
	};
};
